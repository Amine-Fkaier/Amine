{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
    <h1>Task</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ task.label }}</td>
            </tr>
            <tr>
                <th>Desription</th>
                <td>{{ task.desription }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ task.state }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ task.startDate ? task.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ task.endDate ? task.endDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('task_index') }}">back to list</a>

    <a href="{{ path('task_edit', {'id': task.id}) }}">edit</a>

    {{ include('task/_delete_form.html.twig') }}
{% endblock %}
